{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "bahrainnights.com"
        }
      ],
      "destination": "https://www.bahrainnights.com/:path*",
      "permanent": true
    },
    {
      "source": "/places/zahle",
      "destination": "/places",
      "permanent": true
    },
    {
      "source": "/entertainment",
      "destination": "/artists",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/keep-alive",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cinema",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/seo-agent",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/index-pages",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/international-events",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/bulk-index",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/request-indexing",
      "schedule": "30 2 * * *"
    }
  ]
}
